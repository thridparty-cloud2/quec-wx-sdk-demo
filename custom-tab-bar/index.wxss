@import '../asset/icon.wxss';

.sdk-icon {
  font-size: 26px;
}

.tab-main-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 60px;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(5px);
  display: flex;
  padding-bottom: env(safe-area-inset-bottom);
  z-index: 80;
}

.tab-main-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  margin: 0 5%;
}

.tab-main-bar-item .iconimg {
  width: 28px;
  height: 28px;
}

.tab-main-bar-item cover-view {
  font-size: 10px;
  padding-top: 8rpx;
}

.imgCon {
  position: relative;
}

.tag {
  width: 10rpx;
  height: 10rpx;
  background: #FF4E45;
  border-radius: 50%;
  display: inline-block;
  position: absolute;
  right: 0rpx;
  top: 5rpx;
}

.txt {
  font-size: 11px;
}

.zhineng-huidu,
.zhineng-jiaodian1 {
  font-size: 24px;
}