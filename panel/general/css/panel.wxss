.tsl_vcol {
  background: #ffffff;
  margin: 10rpx;
  padding: 20rpx;
  text-align: left;
  border-radius: 8px;
}

.tsl_val {
  font-size: 18px;
  font-weight: 500;
  text-overflow: ellipsis;
  overflow: hidden;
  width: 100%;
  white-space: nowrap;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  height: 28px;
  line-height: 28px;
}

.tsl_val .val {
  font-weight: normal;
  font-size: 12px;
  color: #999999;
}

.tsl_val text {
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 16px;
  font-weight: 500;
  color: #333333;
}

.tsl_val .title {
  font-size: 14px;
  color: #999999;
  font-weight: normal;
}

.tsl_vcol .val {
  font-size: 18px;
  font-weight: 500;
  color: #333333;
  height: 28px;
  line-height: 28px;
}

.tsl_txt {
  color: #999999;
  font-size: 14px;
  line-height: 28px;
  text-overflow: ellipsis;
  overflow: hidden;
  width: 100%;
  white-space: nowrap;
  margin: 0 auto;
  height: 28px;
}

.tsl_txt text {
  height: 40rpx;
}

.tsl_struct {
  color: #999999;
  font-size: 12px;
  line-height: 56rpx;
  width: 100%;
}

.boxflex {
  display: flex;
  justify-content: space-between;
}

.right {
  text-align: right;
}

.read_txt {
  word-break: break-all;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  /* 超出几行省略 */
  overflow: hidden;
  color: #999999;
  font-size: 14px;
  line-height: 40rpx;
}