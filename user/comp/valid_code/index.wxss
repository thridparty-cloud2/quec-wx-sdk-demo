@import '../../css/user.wxss';

.item {
  margin: 0 10rpx;
}

.main {
  display: flex;
  flex-direction: row;
}

.time {
  text-align: right;
  font-size: 12px;
  color: #999999;
  padding-top: 30rpx;
}

.flex-box {
  display: flex;
  align-items: center;
}

.flex-box input {
  width: 90rpx;
  height: 80rpx;
  margin: 0 10rpx;
  padding-bottom: 8rpx;
  border-bottom: 4rpx solid #efefef;
  text-align: center;
  color: #080F19;
  font-size: 32px;
  font-weight: bold;
}

.active {
  border-color: #999999 !important;
}

.vcode {
  height: 0;
  width: 0;
}