@import "/asset/base.wxss";
@import "/asset/pop.wxss";

.ubox {
  padding: 40rpx 50rpx;
}

.uh2 {
  font-weight: 600;
  font-size: 24px;
  color: #080f19;
}

.padt {
  padding-bottom: 70rpx;
}

.udesc {
  font-size: 13px;
  margin-top: 8px;
  color: #9c9fa3;
}

.line {
  width: 100%;
  height: 0.5px;
  background: #efefef;
}

.jump {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 50rpx;
}

.jump .t1,
.jump .t2 {
  color: #999;
  font-size: 14px;
}

.jump .t1 {
  padding: 10rpx 40rpx 10rpx 0;
}

.jump .t2 {
  padding: 10rpx 0 10rpx 40rpx;
}

.van-icon-arrow {
  color: #bfbfbf !important;
}

.getCodeDisBtn {
  background: #ffffff !important;
  border-color: #efefef !important;
  color: #999999 !important;
}

.inputItem {
  margin: 40rpx 0;
}

.sdk-icon.yincang,
.sdk-icon.yincang-1 {
  color: #c8c9cc;
  font-size: 23px;
}

.pwdState {
  position: absolute;
  right: 0;
  width: 30px;
  height: 40px;
  top: 7px;
  line-height: 40px;
  text-align: right;
  padding-right: 2px;
  background: #ffffff;
  z-index: 101;
}

.profileTitle,
.personal .cellTitle {
  font-size: 16px;
  color: #333333;
  font-weight: 500;
}

.profile::after {
  border-bottom: 1px solid #ebedf0;
  bottom: 0;
  box-sizing: border-box;
  content: " ";
  left: 16px;
  pointer-events: none;
  position: absolute;
  right: 0;
  transform: scaleY(0.5);
  transform-origin: center;
  border-bottom-width: 1px;
  border-bottom-style: solid;
  border-bottom-color: rgb(235, 237, 240);
}

.personal .val {
  color: #666666;
  font-size: 14px;
  text-align: right;
  padding-right: 10rpx;
}

.profile {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 40rpx;
  position: relative;
}

.profileInfo {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.profile .van-icon,
.profile .van-icon:before {
  padding-top: 25rpx !important;
}

.bgfff {
  background: #ffffff;
}